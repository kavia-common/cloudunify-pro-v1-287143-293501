# CloudUnify Pro - BackendAPI (.env.example)
# Copy this file to .env and adjust values for your environment.
# Never commit real secrets.

# Database URL
# - Production (recommended): postgresql+asyncpg://USER:PASS@HOST:5432/DBNAME
# - Dev/Tests fallback: sqlite+aiosqlite:///./app.db
DATABASE_URL=sqlite+aiosqlite:///./app.db

# JWT configuration
# IMPORTANT: Change SECRET_KEY in non-development environments.
SECRET_KEY=CHANGE_ME_DEVELOPMENT_ONLY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS allowed origins (comma-separated). Use * only for local development.
# Example: http://localhost:5173,http://localhost:3000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Alembic migration behavior
# If set to 1, Alembic migrations are applied automatically at startup for non-sqlite DBs.
USE_ALEMBIC=1

# SQLAlchemy engine echo for debug (0 or 1)
SQL_ECHO=0
