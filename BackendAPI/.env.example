# BackendAPI - Example environment variables for development

# Database
DATABASE_URL=sqlite+aiosqlite:///./app.db
USE_ALEMBIC=1
SQL_ECHO=0

# Server
HOST=0.0.0.0
REACT_APP_PORT=3001
PORT=3001
RELOAD=1
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=

# JWT
SECRET_KEY=CHANGE_ME_DEVELOPMENT_ONLY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (comma-separated). Prefer CORS_ORIGINS, also accepts ALLOWED_ORIGINS and CORS_ALLOW_ORIGINS.
CORS_ORIGINS=http://localhost:5173
ALLOWED_ORIGINS=
CORS_ALLOW_ORIGINS=

# Dev tools / diagnostics
DEV_TOOLS=1
AUTH_DEV_LOGS=1

# Dev seeding flags
# Enabling either DEV_SEED_USERS or DEV_SEED_ENABLED (or DEV_SEED) turns on seeding explicitly.
DEV_SEED_USERS=1
DEV_SEED_ENABLED=1
DEV_SEED=

# Default seeded users (override as needed)
DEV_ADMIN_EMAIL=admin@cloudunify.pro
DEV_ADMIN_PASSWORD=Admin123!
DEV_USER_EMAIL=user@cloudunify.pro
DEV_USER_PASSWORD=User123!

# Custom demo user (optional)
DEV_SEED_EMAIL=kishore@kavia.ai
DEV_SEED_PASSWORD=Kishore@15404
DEV_SEED_ROLE=user
DEV_SEED_ACTIVE=1
