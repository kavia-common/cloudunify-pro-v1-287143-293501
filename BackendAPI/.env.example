# CloudUnify Pro - BackendAPI (.env.example)
# Copy this file to .env and adjust values for your environment.
# Never commit real secrets.

# Database URL
# - Production (recommended): postgresql+asyncpg://USER:PASS@HOST:5432/DBNAME
# - Dev/Tests fallback: sqlite+aiosqlite:///./app.db
DATABASE_URL=sqlite+aiosqlite:///./app.db

# JWT configuration
# IMPORTANT: Change SECRET_KEY in non-development environments.
SECRET_KEY=CHANGE_ME_DEVELOPMENT_ONLY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS allowed origins (comma-separated). Use * only for local development.
# Examples:
#   http://localhost:5173,http://localhost:3000
# You can use either CORS_ORIGINS or ALLOWED_ORIGINS; both are supported.
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
# Legacy/alternate var supported by app:
CORS_ALLOW_ORIGINS=
# Alternate key also recognized:
ALLOWED_ORIGINS=

# Alembic migration behavior
# If set to 1, Alembic migrations are applied automatically at startup for non-sqlite DBs.
USE_ALEMBIC=1

# SQLAlchemy engine echo for debug (0 or 1)
SQL_ECHO=0

# Node environment (used to infer development behavior when DEV_SEED_USERS is not set)
NODE_ENV=development
REACT_APP_NODE_ENV=development

# Development seeding of users (enables default login credentials in dev)
# Truthy values: 1,true,yes,on (case-insensitive). If not set, defaults to 'on' when NODE_ENV=development.
DEV_SEED_USERS=1
DEV_ADMIN_EMAIL=admin@cloudunify.pro
DEV_ADMIN_PASSWORD=Admin123!
DEV_USER_EMAIL=user@cloudunify.pro
DEV_USER_PASSWORD=User123!
