# BackendAPI - Example environment configuration
#
# Copy to .env and adjust as needed for your environment.

# Database
# For dev/test, SQLite works out-of-the-box:
DATABASE_URL=sqlite+aiosqlite:///./app.db
# For Postgres (production/staging), uncomment and configure:
# DATABASE_URL=postgresql+asyncpg://USER:PASS@HOST:5432/DBNAME

# JWT
SECRET_KEY=CHANGE_ME_DEVELOPMENT_ONLY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
# Comma-separated list of allowed origins. Use '*' for any origin in dev.
CORS_ORIGINS=*

# App server
HOST=0.0.0.0
REACT_APP_PORT=3001
REACT_APP_LOG_LEVEL=info
RELOAD=0

# Environment mode (used for dev conveniences)
NODE_ENV=development
REACT_APP_NODE_ENV=development

# Development user seeding (enabled by default on SQLite or when NODE_ENV=development)
DEV_SEED_USERS=1
DEV_ADMIN_EMAIL=admin@cloudunify.pro
DEV_ADMIN_PASSWORD=Admin123!
DEV_USER_EMAIL=user@cloudunify.pro
DEV_USER_PASSWORD=User123!

# Minimal auth failure diagnostics (no passwords logged). Enable for dev.
AUTH_LOG_FAILURES=1
